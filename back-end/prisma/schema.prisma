generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid()) @unique
  admin      Boolean  @default(false)
  name       String
  email      String   @unique
  phone      String?
  password   String
  createdAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
  premium    Boolean  @default(false)
}

model Arena {
  id         String   @id @default(uuid()) @unique
  name          String    @unique
  email         String    @unique
  password      String  
  localization String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  maxVideos     Int       @default(100)
  maxDataVideos DateTime  @default(now())
  videos        Video[]
}

model Video {
  id         String   @id @default(uuid()) @unique
  title String
  file       Bytes
  createdAt DateTime @default(now())

  arena     Arena?   @relation(fields: [arenaId], references: [id])
  arenaId   String?
}

