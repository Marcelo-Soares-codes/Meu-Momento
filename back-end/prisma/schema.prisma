generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @unique @default(uuid())
  name         String
  email        String   @unique
  phone        String?  @default("")
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  premium      Boolean  @default(false)
  role         String   @default("USER")
  profileImage String   @default("")
}

model Arena {
  id                     String   @id @unique @default(uuid())
  name                   String   @unique
  email                  String   @unique
  password               String
  localization           String
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  maxVideos              Int      @default(100)
  maxDataVideos          DateTime @default(now())
  profileBackgroundImage String   @default("")
  profileImage           String   @default("")
  phone                  String
  videos                 Video[]
}

model Video {
  id        String   @id @unique @default(uuid())
  title     String
  file      Bytes
  createdAt DateTime @default(now())
  arenaId   String?
  arena     Arena?   @relation(fields: [arenaId], references: [id])
}
